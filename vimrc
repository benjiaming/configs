syntax enable

set encoding=utf8
set ffs=unix,dos,mac
 
"Misc stuff
set so=7
set backspace=eol,start,indent
set whichwrap+=<,>,h,l
set ignorecase
set hlsearch
set nowrap
set number

"Tabbing
set smartindent
set tabstop=4
set shiftwidth=4
set expandtab
 
"Backup
set nobackup
set nowb
set noswapfile

